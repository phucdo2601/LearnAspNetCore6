@page "{id:Guid}"
@model LearnBasRazorPageB01.Pages.Employees.EditModel
@{
    var message = ViewData["Message"]?.ToString();
}



<form method="post">

    @if (!string.IsNullOrWhiteSpace(message))
    {
            <div class="alert alert-success">
            @message
            </div>
    }

    <h1 class="mb-3">Edit Employee</h1>
    <div class="mb-3">
        <label class="form-label">Id</label>
        <input type="text" class="form-control" asp-for="EditEmployeeViewModel.Id" readonly/>

    </div>

    <div class="mb-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="EditEmployeeViewModel.Name"/>

    </div>

    <div class="mb-3">
        <label class="form-label">Email</label>
        <input type="text" class="form-control" asp-for="EditEmployeeViewModel.Email"/>

    </div>

    <div class="mb-3">
        <label class="form-label">Phone</label>
        <input type="number" class="form-control" asp-for="EditEmployeeViewModel.Phone"/>

    </div>

    <div class="mb-3">
        <label class="form-label">Salary</label>
        <input type="number" class="form-control" asp-for="EditEmployeeViewModel.Salary"/>

    </div>

    <div class="mb-3">
        <label class="form-label">Date Of Birth</label>
        <input type="date" class="form-control" asp-for="EditEmployeeViewModel.DataOfBirth"/>

    </div>

    <div class="mb-3">
        <label class="form-label">Department</label>
        <input type="text" class="form-control" asp-for="EditEmployeeViewModel.Department"/>

    </div>

    <div class="mb-3 justify-content-between">
        <button type="submit" class="btn btn-primary" asp-page-handler="UpdateEmployee">Update</button>
        <button type="submit" class="btn btn-danger" asp-page-handler="DeleteEmployee">Delete</button>
    </div>
</form>

 
