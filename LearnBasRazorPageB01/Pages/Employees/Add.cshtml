@page
@model LearnBasRazorPageB01.Pages.Employees.AddModel
@{
    var message = ViewData["Message"]?.ToString();
}


<form method="post">
    <h1 class="mb-3">Add New Employee</h1>

    @if (!string.IsNullOrWhiteSpace(message))
    {
        <div class="alert alert-success">
            @message
        </div>
    }

    <div class="mb-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="AddEmployeeRequest.Name"/>

    </div>

    <div class="mb-3">
        <label class="form-label">Email</label>
        <input type="text" class="form-control" asp-for="AddEmployeeRequest.Email"/>

    </div>

    <div class="mb-3">
        <label class="form-label">Phone</label>
        <input type="number" class="form-control" asp-for="AddEmployeeRequest.Phone"/>

    </div>

    <div class="mb-3">
        <label class="form-label">Salary</label>
        <input type="number" class="form-control" asp-for="AddEmployeeRequest.Salary"/>

    </div>

    <div class="mb-3">
        <label class="form-label">Date Of Birth</label>
        <input type="date" class="form-control" asp-for="AddEmployeeRequest.DataOfBirth"/>

    </div>

    <div class="mb-3">
        <label class="form-label">Department</label>
        <input type="text" class="form-control" asp-for="AddEmployeeRequest.Department"/>

    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>


